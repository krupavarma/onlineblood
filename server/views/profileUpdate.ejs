<body>
<script>
    function checkFirstName()
    {
        var firstname=document.getElementById("first-name").value;
        if(firstname=="")
            alert("First Name cannot be empty.");
        else if(/[^a-zA-Z\s]/.test(firstname)==true)
            alert("Incorrect First Name:"+document.getElementById("first-name").value);
    }
    function checkLastName()
    {
        var lastname=document.getElementById("last-name").value;
        if(lastname="")
            alert("Last Name cannot be empty.");
        if(/[^a-zA-Z\s]/.test(lastname)==true)
            alert("Incorrect Last Name:"+document.getElementById("last-name").value);
    }
    function checkAge()
    {
        var ageVal=document.getElementById("age").value;
        if(ageVal=="")
            alert("Age cannot be empty.");
        else if(ageVal<5 || ageVal>85)
            alert("You are too young or too old.");
        if(/[^\d]/.test(ageVal)==true)
            alert("Incorrect Age:"+document.getElementById("age").value);
    }
    function checkPhone()
    {
        var phoneNum=document.getElementById("phone").value;
        if(phoneNum=="")
            alert("Contact number must be provided.")
        if(/[7-9][0-9]{9}/.test(phoneNum)==false)
            alert("Incorrect Contact Number:"+document.getElementById("phone").value);
    }
</script>
<div class="header">
    <div class="home-menu pure-menu pure-menu-horizontal pure-menu-fixed">
        <a class="pure-menu-heading" href="/">BloodBank.com</a>
        <ul class="pure-menu-list">
            <li class="pure-menu-item"><a href="/loggedinhomepage" class="pure-menu-link">Home</a></li>
            <li class="pure-menu-item pure-menu-selected"><a href="/updateProfile" class="pure-menu-link">Edit Profile</a></li>
        </ul>
    </div>
</div>
<div class="content normal-layout">
    <h1 class="content-head is-center">Edit Your Profile Here</h1>
    <div class="pure-g">
        <div class="l-box-lrg pure-u-1 pure-u-md-1-5">
            <img src="/images/profilepics/p1.jpg">
        </div>
        <div class="l-box-lrg pure-u-1 pure-u-md-2-5">
            <form class="pure-form pure-form-stacked" method="post" action="/fillprofile">
                <fieldset>
                    <div class="pure-control-group">
                        <label for="firstname">First Name*</label>
                        <input id="firstname" type="text" placeholder="First Name" name="firstname" onblur="checkFirstName()" required>
                    </div>
                    <div class="pure-control-group">
                        <label for="lastname">Last Name*</label>
                        <input id="lastname" type="text" placeholder="Last Name" name="lastname" onblur="checkLastName()" required>
                    </div>
                    <div class="pure-control-group">
                        <label for="email">Re Enter Your Email*</label>
                        <input id="email" type="text" placeholder="Email" name="email" onblur="checkLastName()" required>
                    </div>
                    <div class="pure-control-group">
                        <label for="age">Age*</label>
                        <input id="age" type="text" name= "age" placeholder="Age" onblur="checkAge()" required>
                    </div>
                    <div class="pure-control-group">
                        <label for="gender">Gender*</label>
                        <select id="gender" name="gender" class="pure-input-1-2">
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="others">Other</option>
                        </select>
                    </div>
                    <div class="pure-control-group">
                        <label for="bloodgroup">Blood Group*</label>
                        <select id="bloodgroup" name="bloodgroup" class="pure-input-1-2">
                            <option value="AB+">AB+</option>
                            <option value="AB-">AB-</option>
                            <option value="A+">A+</option>
                            <option value="A-">A-</option>
                            <option value="B+">B+</option>
                            <option value="B-">B-</option>
                            <option value="O+">O+</option>
                            <option value="O-">O-</option>
                        </select>
                    </div>
                    <div class="pure-control-group">
                        <label for="phone">Contact Number*</label>
                        <input id="contactnumber" type="text" placeholder="Phone Number" name="contactnumber" onblur="checkPhone()" required>
                    </div>
                    <div class="pure-controls">
                        <button type="submit" class="pure-button pure-button-primary" value=" Update Details">Update</button>
                    </div>
                    <div>
                        <p><b>NOTE:</b>All <b>*</b> fields are mandatory.</p>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
</div>
