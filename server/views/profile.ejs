                <%= user.local.email %><br>
            </p>
            <p>
                <form class="pure-form pure-form-stacked" method="get" action="/updateProfile">
                  <button type="submit" class="pure-button pure-button-primary" value="submit">Update Your Profile</button>
                </form>
            </p>
        </div>
    </div>
</div>

